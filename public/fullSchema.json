{
  "openapi": "3.0.0",
  "info": {
    "version": "2.1.0",
    "title": "Accounts API",
    "description": "These are all the APIs related to accounts",
    "contact": {
      "name": "ChilliPharm",
      "url": "https://www.chillipharm.com"
    }
  },
  "servers": [
    {
      "url": "http://chillipharm.test:3000/api/v1",
      "description": "Local development"
    },
    {
      "url": "https://www.chillipharm.com/api/v1",
      "description": "Production"
    }
  ],
  "tags": [
    {
      "name": "Accounts",
      "description": "Endpoints for accounts"
    },
    {
      "name": "Chapter Definitions",
      "description": "Endpoints for chapter definitions"
    }
  ],
  "paths": {
    "/accounts": {
      "get": {
        "summary": "Fetches all the accounts",
        "security": [
          {
            "userSessionKey": []
          },
          {
            "chillipharmSession": []
          }
        ],
        "operationId": "getAccounts",
        "description": "Fetches all accounts",
        "parameters": [],
        "tags": [
          "Accounts"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Accounts"
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorised"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/accounts/{account_id}": {
      "get": {
        "summary": "Get an account",
        "security": [
          {
            "userSessionKey": []
          },
          {
            "chillipharmSession": []
          }
        ],
        "operationId": "getAccount",
        "description": "Get account",
        "parameters": [
          {
            "name": "account_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": "1"
            },
            "description": "The account id"
          }
        ],
        "tags": [
          "Accounts"
        ],
        "requestBody": {
          "content": {}
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "description": "The account id",
                      "example": 1
                    },
                    "name": {
                      "type": "string",
                      "description": "The account name",
                      "example": "test1"
                    },
                    "permissions": {
                      "$ref": "#/components/schemas/Permissions"
                    },
                    "plan_options": {
                      "$ref": "#/components/schemas/PlanOptions"
                    },
                    "subject_id_settings": {
                      "$ref": "#/components/schemas/SubjectIdSettings"
                    },
                    "timezone": {
                      "type": "string",
                      "description": "The account timezone",
                      "example": "Etc/UTC"
                    }
                  },
                  "required": [
                    "id",
                    "name",
                    "permissions",
                    "plan_options",
                    "subject_id_settings",
                    "timezone"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorised"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/accounts/{account_id}/chapter_definitions": {
      "get": {
        "summary": "Fetches chapter definitions for an account to be used for an asset",
        "security": [
          {
            "userSessionKey": []
          },
          {
            "chillipharmSession": []
          }
        ],
        "operationId": "getAccountChapterDefinitions",
        "description": "Fetches chapter definitions for an account",
        "parameters": [
          {
            "name": "account_id",
            "in": "path",
            "description": "The account id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "1"
            }
          }
        ],
        "tags": [
          "Chapter Definitions"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ChapterDefinitions"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorised"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/accounts/{account_id}/form_templates/{id}": {
      "get": {
        "summary": "Get an account form template",
        "security": [
          {
            "userSessionKey": []
          },
          {
            "chillipharmSession": []
          }
        ],
        "operationId": "getAccountFormTemplate",
        "description": "Get account form template",
        "parameters": [
          {
            "name": "account_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": "1"
            },
            "description": "The account id"
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": "1"
            },
            "description": "The form template id"
          }
        ],
        "tags": [
          "Form Templates"
        ],
        "requestBody": {
          "content": {}
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "description": "The form template id",
                      "example": 1
                    },
                    "title": {
                      "type": "string",
                      "description": "The form template title",
                      "example": "Form template title"
                    },
                    "fields": {
                      "type": "array",
                      "description": "The form template fields",
                      "items": {
                        "$ref": "#/components/schemas/FormTemplateField"
                      }
                    }
                  },
                  "required": [
                    "id",
                    "title",
                    "fields"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorised"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "userSessionKey": {
        "type": "apiKey",
        "in": "cookie",
        "name": "user_session_key",
        "description": "User session key cookie"
      },
      "chillipharmSession": {
        "type": "apiKey",
        "in": "cookie",
        "name": "_chillipharm_session",
        "description": "ChilliPharm session cookie"
      }
    },
    "schemas": {
      "Account": {
        "description": "",
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "The id of account",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "The name of account",
            "example": "Test Trial"
          }
        },
        "additionalProperties": false,
        "required": [
          "id",
          "name"
        ]
      },
      "Accounts": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Accounts"
        }
      },
      "ChapterDefinition": {
        "description": "A chapter definition",
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "description": "The id of chapter definition",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "The name of chapter definition",
            "example": "pre"
          },
          "color": {
            "type": "string",
            "description": "The color of chapter definition",
            "example": "#ccc"
          },
          "position": {
            "type": "number",
            "description": "The position of chapter definition",
            "example": 1
          }
        },
        "additionalProperties": false,
        "required": [
          "id",
          "name",
          "color"
        ]
      },
      "ChapterDefinitions": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/ChapterDefinition"
        }
      },
      "Error": {
        "description": "An error",
        "type": "object",
        "properties": {
          "errors": {
            "type": "object",
            "properties": {
              "message": {
                "description": "The error message",
                "example": "Bad request. Missing or invalid input parameters."
              },
              "fields": {
                "description": "The error fields",
                "type": "object",
                "example": {
                  "name": [
                    "can't be blank"
                  ],
                  "color": [
                    "can't be blank"
                  ]
                }
              }
            }
          }
        },
        "additionalProperties": false,
        "required": [
          "errors"
        ]
      },
      "FormTemplateField": {
        "description": "Form template field",
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The field id",
            "example": "1"
          },
          "title": {
            "type": "string",
            "description": "The field title",
            "example": "Field title"
          },
          "type": {
            "type": "string",
            "description": "The field type",
            "example": "single_line"
          },
          "input_guidance": {
            "type": "string",
            "description": "The field input guidance",
            "example": "guidance",
            "nullable": true
          },
          "enabled": {
            "type": "boolean",
            "description": "Whether the field is enabled",
            "example": true
          },
          "other_enabled": {
            "type": "boolean",
            "description": "Whether other types are enabled",
            "example": false
          },
          "value": {
            "oneOf": [
              {
                "type": "string",
                "example": ""
              },
              {
                "type": "array",
                "description": "The field value",
                "example": []
              }
            ]
          },
          "validations": {
            "type": "object",
            "properties": {
              "required": {
                "type": "boolean",
                "description": "Whether the field is required",
                "example": true
              },
              "input_format": {
                "type": "string",
                "description": "regex format for input",
                "example": "[a-zA-Z]{1}[a-zA-Z]{1}-\\d{1}\\d{1}\\d{1}\\d{1}\\d{1}",
                "nullable": true
              },
              "character_limit": {
                "type": "integer",
                "description": "The maximum characters",
                "example": 10,
                "nullable": true
              },
              "character_restriction": {
                "type": "string",
                "description": "restricted character type",
                "example": "letters_and_numbers",
                "nullable": true
              }
            },
            "required": [
              "required",
              "input_format",
              "character_limit",
              "character_restriction"
            ],
            "additionalProperties": false
          },
          "options": {
            "type": "array",
            "description": "The field options",
            "items": {
              "type": "string",
              "example": "option1"
            }
          },
          "comments": {
            "type": "array",
            "description": "The field comments",
            "items": {
              "type": "string",
              "example": "comment1"
            },
            "nullable": true
          }
        },
        "required": [
          "id",
          "title",
          "type",
          "enabled",
          "other_enabled",
          "value",
          "validations",
          "options"
        ],
        "additionalProperties": false
      },
      "Permissions": {
        "type": "object",
        "properties": {
          "admin": {
            "type": "boolean",
            "description": "Whether the user is an admin",
            "example": true
          },
          "manager": {
            "type": "boolean",
            "description": "Whether the user is a manager",
            "example": false
          },
          "reporting": {
            "type": "boolean",
            "description": "Whether the user has reporting permissions",
            "example": true
          },
          "activity": {
            "type": "boolean",
            "description": "Whether the user has activity permissions",
            "example": true
          }
        },
        "required": [
          "admin",
          "manager",
          "reporting",
          "activity"
        ],
        "additionalProperties": false
      },
      "PlanOptions": {
        "type": "object",
        "properties": {
          "admin_user_report_enabled": {
            "type": "boolean",
            "description": "Whether the user is an admin",
            "example": true
          },
          "asset_chapters_enabled": {
            "type": "boolean",
            "description": "Whether the user is a manager",
            "example": false
          },
          "check_trial_name_on_upload_enabled": {
            "type": "boolean",
            "description": "Whether the user has reporting permissions",
            "example": true
          },
          "form_templates_enabled": {
            "type": "boolean",
            "description": "Whether the user has activity permissions",
            "example": true
          },
          "hd_transcodes_enabled": {
            "type": "boolean",
            "description": "Whether the user has activity permissions",
            "example": true
          },
          "pdf_previews_enabled": {
            "type": "boolean",
            "description": "Whether the user has activity permissions",
            "example": true
          },
          "reporting_enabled": {
            "type": "boolean",
            "description": "Whether the user has activity permissions",
            "example": true
          },
          "signatures_enabled": {
            "type": "boolean",
            "description": "Whether the user has activity permissions",
            "example": true
          },
          "sites_enabled": {
            "type": "boolean",
            "description": "Whether the user has activity permissions",
            "example": true
          }
        },
        "required": [
          "admin_user_report_enabled",
          "asset_chapters_enabled",
          "check_trial_name_on_upload_enabled",
          "form_templates_enabled",
          "hd_transcodes_enabled",
          "pdf_previews_enabled",
          "reporting_enabled",
          "signatures_enabled",
          "sites_enabled"
        ],
        "additionalProperties": false
      },
      "SubjectIdSettings": {
        "type": "object",
        "properties": {
          "length": {
            "type": "integer",
            "description": "The length of the subject id",
            "example": 8
          },
          "include_site_prefix": {
            "type": "boolean",
            "description": "Whether the site prefix is included",
            "example": false
          }
        },
        "required": [
          "length",
          "include_site_prefix"
        ],
        "additionalProperties": false
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Bad request. Missing or invalid input parameters.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "Unauthorised": {
        "description": "Unauthorised. Missing or invalid authentication credentials.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "The error message",
                  "example": "Unauthorised",
                  "enum": [
                    "Unauthorised"
                  ]
                }
              },
              "additionalProperties": false,
              "required": [
                "error"
              ]
            }
          }
        }
      },
      "Forbidden": {
        "description": "Forbidden. The request was valid, but the server is refusing action.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "The error message",
                  "example": "You do not have sufficient permission to perform this action",
                  "enum": [
                    "You do not have sufficient permission to perform this action",
                    "Forbidden"
                  ]
                }
              }
            }
          }
        }
      },
      "NotFound": {
        "description": "Not found. The requested resource was not found.",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "description": "The error message",
                  "example": "Not found",
                  "enum": [
                    "Not found"
                  ]
                }
              },
              "additionalProperties": false,
              "required": [
                "error"
              ]
            }
          }
        }
      },
      "Conflict": {
        "description": "Conflict. The request could not be completed due to a conflict with the current state of the resource.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "InternalServerError": {
        "description": "Internal server error. Please contact support.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      }
    }
  }
}