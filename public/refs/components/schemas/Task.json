{
  "description": "A task",
  "type": "object",
  "properties": {
    "definition": {
      "type": "string",
      "description": "Task definition",
      "example": "Complete something"
    },
    "status": {
      "type": "string",
      "description": "Status",
      "example": "complete"
    },
    "completed_date": {
      "type": "string",
      "description": "Completed date",
      "example": "October 15th, 2024",
      "nullable": true
    }, 
    "completed_by": {
      "type": "string",
      "description": "Completed by",
      "example": "James Smith",
      "nullable": true
    }
  }
}